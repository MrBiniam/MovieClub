@model IEnumerable<MovieClub.Models.Customer>

<h1>Customer List</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Block</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a asp-action="BlockCustomer" asp-route-id="@customer.Id">Block</a>
                </td>
            </tr>
        }
    </tbody>
</table>
